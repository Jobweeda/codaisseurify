<%= form_for @artist do |f| %>
    <% @artist.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>

    <label>Name</label>
    <%= f.text_field :artist_name, placeholder: "Name of the artist", class: "form-control" %>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
