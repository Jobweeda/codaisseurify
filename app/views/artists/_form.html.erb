<%= form_for @artist, html: { multipart: true } do |f| %>
  <% @artist.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>

<label>Name</label>
   <%= f.text_field :name, placeholder: "Name of the artist", class: "form-control" %>

   <hr>
<label>Photo</label>

  <div class="form-group">
    <span class="btn btn-default">
      Add a Photo for this Artist
      <%= file_field_tag "images[]", type: :file, multiple: false %>
    </span>
  </div>
   <hr>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
