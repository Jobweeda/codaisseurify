<h1>Songs</h1>

<%= form_for @song, artist_songs_path do |f| %>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>

    <label>Name</label>
    <%= f.text_field :song_name, placeholder: "Name of the song", class: "form-control" %>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
